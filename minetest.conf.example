# This file contains a list of available settings and their default values for sandboxy.conf

# By default, settings are commented out and not functional.
# Uncomment settings by removing the preceding #.

# Basic Server Settings
server_name = Sandboxy Server
server_description = Welcome to Sandboxy!
server_address = 
server_url = https://sandboxy.org
server_announce = false
server_port = 30000

# World Settings
world_name = New World
creative_mode = true
enable_damage = false
default_privs = interact, shout
map_dir = /home/user/.local/share/sandboxy/worlds

# Client Settings
viewing_range = 10
enable_particles = true
enable_minimap = true
hotbar_size = 8
show_entity_selectionbox = true
gui_scaling = 1.0

# Graphics Settings
shadows_enabled = true
enable_3d_clouds = true
opaque_water = false
leaves_style = fancy
connected_glass = true
smooth_lighting = true

# Sound Settings
sound_volume = 0.8
ambient_occlusion_gamma = 2.2

# Performance Settings
max_simultaneous_block_sends = 40
max_block_send_distance = 30
active_block_range = 2
server_map_save_interval = 5.0

